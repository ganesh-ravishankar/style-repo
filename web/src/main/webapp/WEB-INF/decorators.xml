<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/resources/*</pattern>
    </excludes> 
    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="style-home" page="vstyleu-home.jsp">
        <pattern>/style-home*</pattern>
    </decorator>
    <decorator name="product" page="vstyleu-home.jsp">
        <pattern>/product*</pattern>
    </decorator>
</decorators>
